<form method="post" action="/pizza_orders/<%= @order_to_update.id %>/updated">
  <label for="first-name">First Name:</label>
  <input type="text" name="first_name" id="first-name" value="<%= @order_to_update.first_name %>">
  <label for="last-name">Last Name:</label>
  <input type="text" name="last_name" id="last-name" value="<%= @order_to_update.last_name %>">
  <label for="pizza-select">Select a pizza:</label>
  <select id="pizza-select" name="topping">
    <option value="<%= @order_to_update.topping  %>"><%= @order_to_update.topping %></option>
    <% if @order_to_update.topping != "Margherita"%>
    <option value="Margherita">Margherita</option>
    <% end %>
    <% if @order_to_update.topping != "Calzone"%>
    <option value="Calzone">Calzone</option>
    <% end %>
  </select>
  <label for="quantity">Quantity:</label>
  <input type="number" name="quantity" id="quantity" value="<%= @order_to_update.quantity %>">

  <input type="submit" value="Update Pizza">

</form>

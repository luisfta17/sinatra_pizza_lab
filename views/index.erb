
<p>All the pizzas!!!</p>
<hr/>

<% for order in @orders %>
  <p>Name: <%= order.pretty_name() %></p>
  <p>Order: <%= order.quantity %> X <%= order.topping  %></p>
  <p>Total price: <%= order.total()  %></p>
  <p><a href="/pizza_orders/<%= order.id  %>">Show Order</a> </p>
  <p><a href="/pizza_orders/<%= order.id  %>/update">Update order</a> </p>
  <form method="post" action="/pizza_orders/<%= order.id  %>/delete">
    <input type="submit" value="delete">
  </form>

  <hr/>
<% end %>

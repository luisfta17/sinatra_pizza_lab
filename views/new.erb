<div class="container">


<form method="post" action="/pizza_orders">
  <label for="first-name">First Name:</label>
    <input type="text" name="first_name" id="first-name" placeholder="Enter first name">
  <label for="last-name">Last Name:</label>
    <input type="text" name="last_name" id="last-name" placeholder="Enter last name">
  <label for="pizza-select">Select a pizza:</label>
    <select id="pizza-select" name="topping">
      <option value="Margherita">Margherita</option>
      <option value="Calzone">Calzone</option>
    </select>
  <label for="quantity">Quantity:</label>
    <input type="number" name="quantity" id="quantity">

  <input type="submit" value="Order Pizza">

</form>
</div>
